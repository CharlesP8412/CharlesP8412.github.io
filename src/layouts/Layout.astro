---
import Header from '../components/Header.astro';
import '../scss/main.scss';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Chuck Prystupa - Web Developer",
  description = "Portfolio of Chuck Prystupa, full-stack web developer with a background in IT. Located in Waterloo Region, Ontario, experienced with remote development."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
